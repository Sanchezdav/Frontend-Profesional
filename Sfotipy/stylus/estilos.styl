@import "nib"
@import 'normalize.styl'
@import 'fonts.styl'

/*animacion(parametro)
	-webkit-animation parametro
	-moz-animation parametro
	-ms-animation parametro
	-o-animation parametro
	animation parametro*/

gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #F0F0F0
rojo = #BD255B

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

img
	vertical-align top

ul
	margin 0
	padding 0

.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro

.actions
	background rgba(black,.3)
	bottom 0
	left 0
	position absolute
	right 0

.author
	color gris_claro

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto

.center-text
	text-align center

.container
	font-size 0
	padding 1.4rem
	text-align center

.close-icon
	color gris_claro
	font-size 1.2em
	position absolute
	right .5em
	top .5em

.header
	height 3.5em
	position relative
	// a
	// 	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em

.left
	float left
.menu
	display none

.name
	color gris_oscuro

.padding
	padding 1em

.padding-tb
	padding 1em 0

.playing
	&.small
		margin 0 auto
		width 20em

.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		animation 2s state infinite linear
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		animation 1s circle infinite
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px

.relative
	position relative

.right
	float right

.right-text
	text-align right

.round
	border-radius 50%
	overflow hidden

.search-icon
	color gris_claro
	position absolute
	left .5em
	top .8em

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem

	&:nth-child(even)
		margin-right 0

	p
		margin .5em 0

.wrap
	width 980px

.playlist
		border-left 1px solid gris_claro
		display none
		padding 0 2em
		width 21em
		.list
			list-style none
		.item
			padding 1em 0
		.action
			font-size 14px

.avatar
	height 38px
	width 38px
.isotipo
	width 122px
.logo
	background white
	display none
	overflow hidden
	padding 1.3em 0
.username
	color gris_claro
	margin-left .5em
	position relative
	top 9px
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em

@keyframes state
	0%
		width 0
	100%
		width 100%

@keyframes circle
	0%
		transform scale(1)
	100%
		opacity 0
		transform scale(1.7)

@media screen and (min-width:480px)
	.image
		img
			height auto
			width 100%

	.playing
		&.medium
			width auto

	.song
		&:nth-child(even)
			margin-right 1em

@media screen and (min-width:980px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.header
		border none
		height auto
		.title
			display none
	.menu
		background gris_mas_claro
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				&:hover
					border-top 5px solid gris_claro
	.music
		float left
		width 32.5em
		.description
			display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			overflow hidden
			width 61.25em
	.logo
	.playlist
		display block
			
