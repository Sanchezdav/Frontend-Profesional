@import 'normalize.styl'

gris_oscuro = #333333
gris_claro = #818181

body
	font-size 16px

figure
	margin 0

.author
	color gris_claro

.container
	font-size 0
	padding 1.4rem
	text-align center

.name
	color gris_oscuro

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	width 8rem

	&:nth-child(even)
		margin-right 0